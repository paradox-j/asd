@model VisitorsModel
@{
    ViewBag.Title = "Авторизация";
}

<div class="row bg-white shadow-sm">
    <div class="col border rounded p-4">
        <div class="container h-100">
            <h2 class="text-center mb-4">Авторизация</h2>
            <form method="post" asp-controller="Home" asp-action="Index">
                <div class="form-group mb-3">
                    <label>Логин:</label>
                    <input asp-for="VisitorLogin" class="form-control" placeholder="Введите логин">
                    <span asp-validation-for="VisitorLogin"></span>
                    @if (ViewBag.CheckUser==false)
                    {
                        <label>Неверный логин/пароль!</label>
                    }
                </div>
                <div class="form-group mb-3">
                    <label>Пароль:</label>
                    <input asp-for="VisitorPassword" class="form-control" id="inputPassword" placeholder="Введите пароль">
                    <span asp-validation-for="VisitorPassword"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-self btn-lg btn-outline-dark" id="enterBtn">Войти</button>
                </div>
                <div class="d-grid gap-2">
                    <a class="btn btn-self btn-lg btn-outline-dark mt-2" asp-controller="Home" asp-action="Registration" id="regBtn">Регистрация</a>
                </div>
                @if (ViewBag.Error != null)
                {
                    <label>@ViewBag.Error</label>
                }
            </form>
        </div>
    </div>
</div>




